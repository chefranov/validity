{
  "name": "Validity",
  "version": "5.0.0",
  "repository": "https://github.com/renyard/validity",
  "license": "Apache-2.0",
  "scripts": {
    "build": "gulp build",
    "package": "gulp package",
    "precommit": "lint-staged && npm test",
    "start": "npm run start:firefox",
    "start:firefox": "npm run build && web-ext run -s dist/ --verbose",
    "test": "nyc --reporter=json --reporter=lcov --reporter=text npm run test:unit",
    "test:mutation": "stryker run",
    "test:unit": "mocha 'test/unit/**/*.spec.js'"
  },
  "devDependencies": {
    "event-stream": "^3.3.4",
    "file-api": "^0.10.4",
    "form-data": "^2.3.2",
    "git-rev-sync": "^1.12.0",
    "gulp": "^3.9.1",
    "gulp-json-editor": "^2.4.1",
    "gulp-zip": "^4.1.0",
    "husky": "^0.14.3",
    "lint-staged": "^7.1.3",
    "merge-stream": "^1.0.1",
    "mocha": "^5.0.0",
    "nyc": "^12.0.1",
    "rmdir": "^1.2.0",
    "standard": "^11.0.1",
    "stryker": "^0.24.1",
    "stryker-api": "^0.17.2",
    "stryker-javascript-mutator": "^0.7.2",
    "stryker-mocha-runner": "^0.12.2",
    "superagent-mock": "^3.7.0",
    "testdouble": "^3.8.1",
    "web-ext": "^2.7.0",
    "webpack-stream": "^4.0.3"
  },
  "dependencies": {
    "superagent": "^3.8.2"
  },
  "standard": {
    "env": [
      "browser",
      "mocha"
    ]
  },
  "lint-staged": {
    "**/*.{js}": [
      "standard --fix",
      "git add"
    ]
  }
}
